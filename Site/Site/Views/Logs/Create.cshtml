@model Site.Log

@{
    ViewData["Title"] = "Create";
}

<hr />
<div class="row">
<h4>Transação</h4>
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="acao" class="control-label"></label>
                <input asp-for="acao" class="form-control" />
                <span asp-validation-for="acao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="produto" class="control-label"></label>
                <input asp-for="produto" class="form-control" />
                <span asp-validation-for="produto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="quantidade" class="control-label"></label>
                <input asp-for="quantidade" class="form-control" />
                <span asp-validation-for="quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="horario" class="control-label"></label>
                <input asp-for="horario" class="form-control" />
                <span asp-validation-for="horario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirmar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
