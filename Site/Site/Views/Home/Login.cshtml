@model Site.Usuario

<form method="post" asp-action="Login">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Login</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="nome"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="nome" class="form-group" />
                    </div>
                </div>
                <div div class="form-group row">
                    <div class="col-4">
                        <label asp-for="senha"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="senha" class="form-group"/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Login"/>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-primary">Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4"></div>
        </div>
    </div>
</form>